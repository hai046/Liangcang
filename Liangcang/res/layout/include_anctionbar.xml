<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/navigation_height"
    android:fadingEdgeLength="0dp"
    android:background="@color/black" >

    <Button
        android:id="@+id/btn_left_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin5"
        android:background="@drawable/selector_back"
        android:singleLine="true"
        android:textSize="@dimen/title_16"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/btn_right_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin5"
        android:background="@null"
        android:singleLine="true"
        android:textColor="@color/white" />
    <!-- android:textSize="@dimen/navigation_textsize" -->

    <Button
        android:id="@+id/btn_right2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin5"
        android:layout_toLeftOf="@id/btn_right_title"
        android:background="@null"
        android:singleLine="true"
        android:visibility="gone" />

    <!-- <ImageView -->
    <!-- android:id="@+id/btnLoading" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_alignParentRight="true" -->
    <!-- android:layout_centerVertical="true" -->
    <!-- android:layout_marginRight="5dip" -->
    <!-- android:src="@drawable/selector_loading" /> -->

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxLength="9"
        android:paddingLeft="25dip"
        android:paddingRight="25dip"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/navigation_textsize" />

</RelativeLayout>