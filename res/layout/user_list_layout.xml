<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/size85" >

        <ImageView
            android:id="@+id/user_Image"
            android:layout_width="@dimen/size85"
            android:layout_height="@dimen/size85"
            android:layout_marginRight="@dimen/margin5"
            android:src="@drawable/demo_people" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_Image"
            android:text="海明月"
            android:textColor="@color/white"
            android:textSize="@dimen/title_16" />

        <TextView
            android:id="@+id/user_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_toRightOf="@id/user_Image"
            android:maxLines="2"
            android:text="个人的描述，哈哈哈哈 个人的描述，哈哈哈哈个人的描述，哈哈哈哈个人的描述，哈哈哈哈个人的描述，哈哈哈哈"
            android:textColor="@color/white"
            android:textSize="@dimen/title_14" />

        <!-- <LinearLayout -->
        <!-- android:layout_width="fill_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_alignParentBottom="true" -->
        <!-- android:layout_toRightOf="@id/user_Image" -->
        <!-- android:orientation="horizontal" > -->
        <!-- </LinearLayout> -->

        <Button
            android:id="@+id/user_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:text="互相关注"
            android:textColor="@color/blue"
            android:textSize="@dimen/title_14" />

        <Button
            android:id="@+id/user_owermsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:text="私信"
            android:textColor="@color/blue"
            android:textSize="@dimen/title_14" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/user_menu_likeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/user_menu1_selected"
            android:orientation="vertical" >

            <Button
                android:id="@+id/user_menu_like"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8"
                android:background="@null"
                android:text="喜欢"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/user_menu_likeNum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:gravity="center_horizontal"
                android:text="212"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_menu_recommendLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/user_menu2"
            android:orientation="vertical" >

            <Button
                android:id="@+id/user_menu_recommend"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8"
                android:background="@null"
                android:text="推荐"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/user_menu_recommendNum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:gravity="center_horizontal"
                android:text="212"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_menu_attentionLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/user_menu3"
            android:orientation="vertical" >

            <Button
                android:id="@+id/user_menu_attention"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8"
                android:background="@null"
                android:text="关注"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/user_menu_attentionNum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:gravity="center_horizontal"
                android:text="212"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_menu_fansLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/user_menu4"
            android:orientation="vertical" >

            <Button
                android:id="@+id/user_menu_fans"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8"
                android:background="@null"
                android:text="粉丝"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/user_menu_fansNum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:gravity="center_horizontal"
                android:text="212"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>