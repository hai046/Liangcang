<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_left"
    android:layout_width="180dp"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/menuBottomLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size45"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

         <Button
            android:id="@+id/btn_menudaren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin8"
            android:background="@null"
            android:text="达人"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/margin10"
            android:paddingTop="@dimen/margin10" />
        <ImageButton
            android:id="@+id/btn_menuSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin8"
            android:background="@null"
            android:paddingBottom="@dimen/margin10"
            android:paddingTop="@dimen/margin10"
            android:src="@drawable/menu_search" />

        <ImageButton
            android:id="@+id/btn_menuHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin8"
            android:background="@null"
            android:paddingBottom="@dimen/margin10"
            android:paddingTop="@dimen/margin10"
            android:src="@drawable/menu_heart" />

        <Button
            android:id="@+id/btn_menuSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin8"
            android:background="@null"
            android:paddingBottom="@dimen/margin10"
            android:paddingTop="@dimen/margin10"
            android:text="个人设置"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_menuExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin8"
            android:background="@null"
            android:paddingBottom="@dimen/margin10"
            android:paddingTop="@dimen/margin10"
            android:text="退出"
            android:textColor="@color/white" />
    </LinearLayout>

    <com.liangcang.weigets.COFixListViewBugLinearLayout
        android:id="@+id/meau_LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/menuBottomLayout"
        android:layout_weight="1" >
    </com.liangcang.weigets.COFixListViewBugLinearLayout>

</RelativeLayout>